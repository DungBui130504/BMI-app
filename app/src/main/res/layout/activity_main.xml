<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        android:text="Chuong trinh tinh chi so BMI"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/tvTitle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Nhap ten:"
        android:textSize="16dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        android:id="@+id/tvLabelName"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            android:text="Chieu cao:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/tvLabelHeight"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelHeight"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            android:text="Can nang:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/tvLabelWeight"
            />

        <EditText
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintLeft_toRightOf="@+id/tvLabelName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:hint="Name"
            android:textSize="16dp"
            android:id="@+id/etName"
            />

        <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etName"
            app:layout_constraintLeft_toRightOf="@+id/tvLabelHeight"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:hint="Height"
            android:textSize="16dp"
            android:id="@+id/etHeight"
            />

        <EditText
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etHeight"
            app:layout_constraintLeft_toRightOf="@+id/tvLabelWeight"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:hint="Weight"
            android:textSize="16dp"
            android:id="@+id/etWeight"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etWeight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="Tinh BMI"
            android:textSize="18dp"
            android:background="@drawable/cal_btn"
            android:id="@+id/calBtn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/calBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            android:text="BMI ="
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/tvLabelBMI"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelBMI"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            android:text="Chuan doan:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/tvLabelDiagnosis"
            />

        <EditText
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/calBtn"
            app:layout_constraintLeft_toRightOf="@+id/tvLabelBMI"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:hint="BMI result"
            android:textSize="16dp"
            android:id="@+id/etBMI"
            />

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etBMI"
            app:layout_constraintLeft_toRightOf="@+id/tvLabelDiagnosis"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:hint="BMI result"
            android:textSize="16dp"
            android:id="@+id/etDiagnosis"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etDiagnosis"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:text="Hien thong tin tong quan"
            android:background="@drawable/cal_btn"
            android:id="@+id/subScreenBtn"
            android:visibility="gone"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/subScreenBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:text="Thoat ung dung"
            android:background="@drawable/cal_btn"
            android:id="@+id/quitBtn"
            />

<!--        sub screen-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="390dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingConstraints"
            android:background="@drawable/sub_screen"
            android:id="@+id/subScreen"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:text="Thong tin tong quan"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/subTvTitle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subTvTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:text="Ten:"
                android:textSize="17dp"
                android:id="@+id/subTvName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subTvName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:text="Chieu cao:"
                android:textSize="17dp"
                android:id="@+id/subTvHeight"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subTvHeight"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:text="Can nang:"
                android:textSize="17dp"
                android:id="@+id/subTvWeight"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subTvWeight"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:text="Tinh trang:"
                android:textSize="17dp"
                android:id="@+id/subTvDiagnosis"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subTvDiagnosis"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="60dp"
                android:text="Dong"
                android:background="@drawable/cal_btn"
                android:id="@+id/subQuitBtn"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>